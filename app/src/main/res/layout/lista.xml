<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/listaLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:includeFontPadding="true"
            android:textStyle="bold"
            app:fontFamily="sans-serif-smallcaps" />

        <GridLayout
            android:columnCount="5"
            android:rowCount="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <TextView
                    android:id="@+id/distanceLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="top"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="true"
                    android:text="DistÃ¢ncia "
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed-light" />
                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="30dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="bottom|fill"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/filaLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="2"
                    android:layout_gravity="top"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="true"
                    android:text="Pessoas na fila"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed-light" />

                <TextView
                    android:id="@+id/filaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="2"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tempoEsperaLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="2"
                    android:layout_gravity="top"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="true"
                    android:text="Tempo de espera"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed-light" />


                <TextView
                    android:id="@+id/tempoEsperaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="2"
                    android:layout_gravity="center|fill_horizontal"
                    android:gravity="center_horizontal" />
        </GridLayout>

</LinearLayout>